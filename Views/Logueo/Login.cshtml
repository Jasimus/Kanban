@{
    ViewData["Title"] = "Login";
}
@using Kanban.Models
@model Usuario_space.Usuario

@if(ViewBag.error != null && ViewBag.error != "")
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.error
    </div>
}

<header class="mb-5">
    <h1>Logueo</h1>
</header>

<div class="d-flex justify-content-center min-vh-100">
    <form asp-controller="Logueo" asp-action="Login" method="post" class="w-50">

        <div class="form-group">
            <label for="username">Nombre</label>
            <input type="text" asp-for="Nombre" name="username" class="form-control" required>
        </div>

        <div class="mt-3 form-group">
            <label for="password">Contraseña</label>
            <input type="password" asp-for="Password" name="password" class="form-control" required>
        </div>

        <div class="text-center">
            <input type="submit" value="Loguearse" class="mt-3 btn btn-success">
        </div>

        <div class="text-center mt-5 row">

            <div class="col">
                <p class="mb-0">¿No tienes un usuario?</p>
                <a asp-action="CrearUsuario" asp-controller="Usuarios">crear usuario</a>
            </div>

            <div class="col">
                <p class="mb-0">¿Has olvidado tu contraseña?</p>
                <a asp-action="CambiarPassword" asp-controller="Usuarios">cambiar contraseña</a>
            </div>
        </div>
    </form>
</div>
