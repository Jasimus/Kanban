@{
    ViewData["Title"] = "Crear Tablero";
    int? idUsuario = Context.Session.GetInt32("idUsuario");
    string display = "none";
}
@using Kanban.Models
@model Tablero_space.Tablero

@if(ViewBag.error != null && ViewBag.error != "")
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.error
    </div>
}

<h1 class="mb-5">Crear Tablero</h1>

<form asp-controller="Tableros" asp-action="CrearTablero" method="post">

    <input type="hidden" value="0" asp-for="Id">

    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" asp-for="Nombre" name="Nombre" class="form-control" required>
    </div>

    <div class="mt-3 form-group">
        <label for="descripcion">descripci√≥n</label>
        <input type="descripcion" asp-for="Descripcion" name="descripcion" class="form-control">
    </div>

    <input type="hidden" value="@idUsuario" asp-for="IdUsuarioPropietario">

    <div class="text-center">
        <input type="submit" value="Crear" class="mt-3 btn btn-success">
    </div>
</form>