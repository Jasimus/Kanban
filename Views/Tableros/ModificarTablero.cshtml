@{
    ViewData["Title"] = "Modificar Tablero";
}
@using Kanban.Models
@model Tablero_space.Tablero

@section Scripts{<partial name="_ValidationScriptsPartial"/>}

@if(ViewBag.error != null && ViewBag.error != "")
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.error
    </div>
}

<header class="mb-5">
<h1 >Modificar Tablero</h1>
</header>

<form asp-controller="Tableros" asp-action="ModificarTablero" method="post">
    <legend>Modificar Tablero: @Model.Nombre</legend>

    <input type="hidden" value="@Model.Id" asp-for="Id">
    <input type="hidden" value="@Model.IdUsuarioPropietario" asp-for="IdUsuarioPropietario">

    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" asp-for="Nombre" name="Nombre" class="form-control" id="nombre" value="@Model.Nombre" required>
    </div>

    <div class="mt-3 form-group">
        <label for="descripcion">Descripcion</label>
        <input type="text" asp-for="Descripcion" name="Descripcion" class="form-control" value="@Model.Descripcion" id="descripcion">
    </div>

    <div class="text-center">
        <input type="submit" value="Modificar" class="mt-3 btn btn-success">
    </div>
</form>