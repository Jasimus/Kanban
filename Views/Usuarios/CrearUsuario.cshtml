@{
    ViewData["Title"] = "Crear Usuario";
}
@using Kanban.Models
@model Usuario_space.Usuario

@section Scripts{<partial name="_ValidationScriptsPartial"/>}

@if(ViewBag.error != null && ViewBag.error != "")
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.error
    </div>
}

<h1 class="mb-5">Crear Usuario</h1>

<form asp-controller="Usuarios" asp-action="CrearUsuario" method="post">

    <input type="hidden" value="0" asp-for="Id">

    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" asp-for="Nombre" name="Nombre" class="form-control" required>
    </div>

    <div class="mt-3 form-group">
        <label for="password">Contrase√±a</label>
        <input type="password" asp-for="Password" name="password" class="form-control" required>
    </div>

    <input type="hidden" value="Operador" asp-for="RolUsuario">

    <div class="text-center">
        <input type="submit" value="Crear" class="mt-3 btn btn-success">
    </div>
</form>