@{
    ViewData["Title"] = "Cambiar Contraseña";
}
@using Kanban.Models
@model int

@if(ViewBag.error != null && ViewBag.error != "")
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.error
    </div>
}

<header class="mb-5">
<h1 >Cambiar Contraseña</h1>
</header>


<form asp-action="CambiarPasswordPost" asp-controller="Usuarios" method="post">

    <input type="hidden" value="@Model" name="id">
    <div class="form-group">
        <label for="usuario">Ingrese la nueva contraseña</label>
        <input type="password" class="form-control" name="password">
    </div>

    <input type="submit" class="mt-3 btn btn-primary" value="cambiar">
</form>