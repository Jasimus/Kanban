@{
    ViewData["Title"] = "Modificar Usuario";
}
@using Kanban.Models
@model Usuario_space.Usuario

@if(ViewBag.error != null && ViewBag.error != "")
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.error
    </div>
}

<header class="mb-5">
<h1 >Modificar Usuario</h1>
</header>

<form asp-controller="Usuarios" asp-action="ModificarUsuario" method="post">
    <legend>Modificar usuario @Model.Nombre</legend>

    <input type="hidden" value="@Model.Id" asp-for="Id">

    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" asp-for="Nombre" name="Nombre" class="form-control" value="@Model.Nombre" required>
    </div>

    <div class="mt-3 form-group">
        <label for="password">Contrase√±a</label>
        <input type="password" asp-for="Password" name="Password" class="form-control" value="@Model.Password" required>
    </div>

    <div class="mt-3 form-group">
        <label for="rol">Rol</label>
        <select class="form-select" name="RolUsuario" id="rol" asp-for="RolUsuario">
            <option value="2" selected>Operador</option>
            <option value="1">Administrador</option>
        </select>
    </div>

    <div class="text-center">
        <input type="submit" value="Modificar" class="mt-3 btn btn-success">
    </div>
</form>